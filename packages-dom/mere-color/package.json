{
  "name": "@kcuf/mere-color",
  "version": "0.0.3",
  "description": "Mere color utils for generating, manipulation, a11y purposes.",
  "keywords": [
    "chroma-js",
    "color",
    "color2k",
    "colord",
    "colormaster",
    "culori",
    "polished",
    "tinycolor2"
  ],
  "license": "MIT",
  "sideEffects": false,
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/justnewbee/kcuf.git"
  },
  "homepage": "https://github.com/justnewbee/kcuf/tree/master/packages-dom/mere-color",
  "bugs": "https://github.com/justnewbee/kcuf/issues",
  "author": {
    "name": "Jianchun Wang",
    "email": "justnewbee@gmail.com"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@ant-design/fast-color": "^3.0.0",
    "@babel/cli": "^7.27.2",
    "@babel/core": "^7.27.4",
    "@babel/plugin-transform-runtime": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-typescript": "^7.27.1",
    "@chromatic-com/storybook": "^4.0.1",
    "@kcuf/demo-rc": "workspace:^",
    "@kcuf/ts-config": "workspace:^",
    "@storybook/addon-docs": "^9.0.12",
    "@storybook/addon-links": "^9.0.12",
    "@storybook/react-vite": "^9.0.12",
    "@types/chroma-js": "^3.1.1",
    "@types/color": "^4.2.0",
    "@types/culori": "^4.0.0",
    "@types/lodash": "^4.17.18",
    "@types/react": "^18.3.20",
    "@types/tinycolor2": "^1.4.6",
    "@vitest/coverage-v8": "^3.2.4",
    "chroma-js": "^3.1.2",
    "color": "^5.0.0",
    "color2k": "^2.0.3",
    "colord": "^2.9.3",
    "colormaster": "^1.2.1",
    "culori": "^4.0.1",
    "polished": "^4.3.1",
    "react": "^18.3.1",
    "rimraf": "^6.0.1",
    "storybook": "^9.0.12",
    "styled-components": "^6.1.19",
    "tinycolor2": "^1.6.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@babel/runtime": "^7.x",
    "lodash": "^4.17.21"
  },
  "dependencies": {
    "@kcuf/ts-missing-helpers": "workspace:^"
  },
  "scripts": {
    "start": "storybook dev -p 6006",
    "build:clean": "rimraf dist",
    "build:esm": "ESM=1 babel src -d dist/esm --extensions .ts,.tsx --source-maps",
    "build:cjs": "ESM=0 babel src -d dist/cjs --extensions .ts,.tsx",
    "build:types": "tsc -rootDir src --outDir dist/types --declaration --noEmit false --emitDeclarationOnly --isolatedModules false",
    "build:sb": "storybook build",
    "build": "pnpm build:esm && pnpm build:cjs && pnpm build:types",
    "watch": "pnpm build:esm -w",
    "test": "vitest",
    "test:cov": "vitest --coverage --coverage.include=src",
    "prepublishOnly": "pnpm build:clean && pnpm build"
  }
}